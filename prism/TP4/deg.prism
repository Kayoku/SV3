// model type
ctmc

// constants
const double kdeg = 0.1;
const double T;

module Degradation
    // var name   // range  // initial value
    A_:           [0..50]   init 50;

    // transition    guard          rate         how to obtain new state
    // label            
    []               (A_ > 0)   -> (kdeg * A_):  (A_' = A_ - 1);
endmodule

rewards "A_"
	// guard	// value
	true : 		A_;
endrewards

rewards "vitesse"
	true :		A_ * kdeg;
endrewards